<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vehicle"
    android:background="@color/colorPrimaryWhite"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image_car_ex2"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_vehicle_name"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColor="@color/colorPrimaryFont"
                android:text="Masserati DSE AT 2015"
                android:maxLines="2"
                android:textSize="@dimen/text_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_plat_number"
                    android:text="NI 21231324 - "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/colorPrimaryHintFont"
                    android:textSize="@dimen/text_11" />
                <TextView
                    android:id="@+id/tv_city"
                    android:text="Jakarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/colorPrimaryTheme"
                    android:textSize="@dimen/text_11" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="DisableBaselineAlignment">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/tv_penawaran_terakhir"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Rp 111.000.000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/tv_terjual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_price_sold"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Rp 120.000.000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:gravity="bottom"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_view_item"
                        android:background="@drawable/ic_circle_gray"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_initial_name"
                        android:text="B"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_24"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>