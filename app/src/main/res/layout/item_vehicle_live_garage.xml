<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_height="@dimen/_124sdp"
    android:background="@color/colorPrimaryWhite">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessLeaf">
            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/image_car_ex2"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center|start"
                android:orientation="vertical"
                tools:ignore="RtlHardcoded">
                <LinearLayout
                    android:layout_marginTop="@dimen/_8sdp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/design_card_expired_date"
                    tools:ignore="UselessParent">
                    <TextView
                        android:id="@+id/tv_timer"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:drawableStart="@drawable/ic_timer"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_11"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_vehicle_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:maxLines="2"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_16" />
                <TextView
                    android:id="@+id/tv_plat_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/colorPrimaryHintFont"
                    android:textSize="@dimen/text_10" />
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/colorPrimaryHintFont"
                    android:textSize="@dimen/text_10" />
                <LinearLayout
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    tools:ignore="UselessLeaf">
                    <ImageView
                        android:id="@+id/iv_min"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_minus_circle"
                        tools:ignore="ContentDescription" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/design_search"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/tv_price"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:background="@drawable/design_search"
                            android:fontFamily="@font/nunito_regular"
                            android:gravity="left|center"
                            android:text="Rp 0"
                            android:maxLength="16"
                            android:paddingStart="@dimen/_8sdp"
                            android:paddingEnd="@dimen/_2sdp"
                            android:scrollbarSize="@dimen/text_10"
                            android:textColorHint="@color/colorPrimaryHintFont"
                            android:textSize="@dimen/text_10"
                            tools:ignore="Autofill,HardcodedText,LabelFor,NestedWeights,RelativeOverlap,RtlSymmetry" />
                        <ImageView
                            android:id="@+id/iv_clear_price"
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:src="@drawable/ic_clear_price"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/iv_plus"
                        android:layout_width="@dimen/_13sdp"
                        android:layout_height="@dimen/_13sdp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_plus_circle"
                        tools:ignore="ContentDescription" />
                    <Button
                        android:id="@+id/btn_nego"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@drawable/btn_design_radius_5"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/btn_nego"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_10" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_favorite"
        android:layout_alignParentEnd="true"
        app:cardCornerRadius="@dimen/_30sdp"
        app:cardElevation="@dimen/_2sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/ic_bg_circle_shadow"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_favorite"
                android:src="@drawable/ic_favorite"
                android:scaleType="centerInside"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_success_bidding"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="0dp"
        android:visibility="gone"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:alpha="0.5"
                android:background="@color/colorPrimaryTheme"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:fontFamily="@font/nunito_regular"
                android:textSize="@dimen/text_18"
                android:textColor="@color/colorPrimaryWhite"
                android:layout_centerInParent="true"
                android:text="@string/tv_penawaran_anda_berhasil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>