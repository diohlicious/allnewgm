<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    tools:context=".fragment.register.DataDiriFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryWhite"
        tools:context=".fragment.register.DocumentFragment"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:backgroundTint="@color/colorPrimary"
            tools:ignore="UseCompoundDrawables,UselessLeaf">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_marginStart="@dimen/_19sdp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_back_chevron"
                android:layout_gravity="center"
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_18sdp"
                tools:ignore="ContentDescription,ObsoleteLayoutParam" />
            <TextView
                android:layout_toRightOf="@+id/tv_data_diri"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_25sdp"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/tv_dokumen_ktp"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ObsoleteLayoutParam,RtlHardcoded" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/_133sdp"
            tools:ignore="MissingPrefix">
            <ImageView
                android:layout_gravity="top|left"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_125sdp"
                android:src="@drawable/bg_document"
                android:layout_marginStart="@dimen/_26sdp"
                android:layout_marginTop="@dimen/_5sdp"
                tools:ignore="ContentDescription,RtlHardcoded" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Upload \n Foto KTP"
                android:fontFamily="@font/nunito_bold"
                android:textSize="@dimen/_18sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginStart="@dimen/_40sdp"
                android:textColor="@color/colorPrimaryWhite"
                tools:ignore="HardcodedText" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/ic_document"
                android:layout_marginTop="@dimen/_85sdp"
                android:layout_marginStart="@dimen/_36sdp"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_next_data_diri"
            android:layout_marginTop="@dimen/_56sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/nunito_semi_bold"
            android:textSize="@dimen/text_18"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:textColor="@color/colorPrimaryWhite"
            android:textAllCaps="false"
            android:text="@string/btn_selanjutnya"
            android:background="@drawable/btn_design"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

