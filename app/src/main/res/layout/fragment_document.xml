<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    tools:context=".fragment.register.DocumentFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center|left"
            tools:ignore="RtlHardcoded,UselessLeaf,UselessParent">
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:padding="@dimen/_10sdp"
                android:src="@drawable/ic_back_chevron"
                tools:ignore="ContentDescription" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_toRightOf="@+id/iv_back"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/tv_dokumen_ktp"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_28" />
        </RelativeLayout>
        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/_16sdp"
            android:paddingLeft="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingBottom="@dimen/_16sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            app:sv_stepsNumber="4"
            app:sv_stepLineWidth="@dimen/_2sdp"
            app:sv_stepPadding="0dp"
            app:sv_stepNumberTextSize="@dimen/text_18"
            app:sv_doneCircleRadius="@dimen/_15sdp"
            app:sv_selectedCircleRadius="@dimen/_15sdp"
            app:sv_nextTextColor="@color/colorPrimaryWhite"
            app:sv_nextStepLineColor="#DFDEDE"
            app:sv_nextStepCircleColor="#DFDEDE"
            app:sv_nextStepCircleEnabled="true"
            app:sv_selectedCircleColor="@color/colorPrimaryTheme"
            app:sv_selectedTextColor="@color/colorPrimaryWhite"
            app:sv_selectedStepNumberColor="@color/colorPrimaryWhite"
            app:sv_doneStepLineColor="@color/colorPrimaryTheme"
            app:sv_doneCircleColor="@color/colorPrimaryTheme"
            app:sv_doneStepMarkColor="@color/colorPrimaryWhite"
            app:sv_doneTextColor="@color/colorPrimaryWhite"
            app:sv_animationType="All" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_upload_photo_ktp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingPrefix">
                    <ImageView
                        android:id="@+id/iv_photo_ktp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_document"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/tv_description_upload_photo_ktp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Upload \nFoto KTP"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_18"
                        tools:ignore="HardcodedText" />
                    <ImageView
                        android:id="@+id/iv_image_document_ktp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_75sdp"
                        android:src="@drawable/ic_document"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_upload_selfi_ktp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="@dimen/_120sdp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="MissingPrefix">
                    <ImageView
                        android:id="@+id/iv_photo_selfie"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/bg_document"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/tv_description_upload_selfie_ktp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_27sdp"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Upload \nSelfie KTP"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_18"
                        tools:ignore="HardcodedText" />
                    <ImageView
                        android:id="@+id/iv_image_selfie_ktp"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_17sdp"
                        android:layout_marginStart="@dimen/_30sdp"
                        android:layout_marginTop="@dimen/_75sdp"
                        android:src="@drawable/ic_smile"
                        tools:ignore="ContentDescription" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <TextView
            android:layout_marginTop="@dimen/_25sdp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:drawableEnd="@drawable/ic_angle_right"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/tv_paduan_foto_ktp"
            android:textColor="@color/colorPrimaryFont"
            android:textSize="@dimen/text_16"
            tools:ignore="RelativeOverlap,RtlHardcoded" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">
            <ImageView
                android:layout_width="@dimen/_105sdp"
                android:layout_height="match_parent"
                android:src="@drawable/sample_ktp1"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="match_parent"
                android:src="@drawable/sample_ktp1"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@color/colorPrimaryLine" />
        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center|left"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_32sdp"
            android:drawableEnd="@drawable/ic_angle_right"
            android:fontFamily="@font/nunito_bold"
            android:text="@string/tv_paduan_selfie_ktp"
            android:textColor="@color/colorPrimaryFont"
            android:textSize="@dimen/text_16"
            tools:ignore="RelativeOverlap,RtlHardcoded" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal"
            tools:ignore="RtlHardcoded">
            <ImageView
                android:layout_width="@dimen/_105sdp"
                android:layout_height="match_parent"
                android:src="@drawable/sample_selfie1"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_marginStart="@dimen/_40sdp"
                android:layout_width="@dimen/_105sdp"
                android:layout_height="match_parent"
                android:src="@drawable/sample_selfie2"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_end_register_data"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:fontFamily="@font/nunito_semi_bold"
            android:textSize="@dimen/text_18"
            android:textColor="@color/colorPrimaryWhite"
            android:textAllCaps="false"
            android:text="@string/btn_selesai"
            android:background="@drawable/btn_design"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

