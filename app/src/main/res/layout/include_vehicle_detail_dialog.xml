<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryBackgroundDialog"
    android:id="@+id/relative_background_dialog"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linear_dialog_nego"
        android:layout_alignParentBottom="true"
        android:background="@drawable/dialog_round_half"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:background="@drawable/dialog_round"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_3sdp"/>
        <TextView
            android:text="@string/tv_waktu_penawaran"
            android:textColor="@color/colorPrimaryFont"
            android:fontFamily="@font/nunito_regular"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            tools:ignore="UselessLeaf">
            <TextView
                android:id="@+id/tv_hour_first"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:textSize="@dimen/text_24"
                android:textColor="@color/colorPrimaryFont"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:hint="0"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/ic_background_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_hour_second"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:textSize="@dimen/text_24"
                android:textColor="@color/colorPrimaryFont"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:layout_marginEnd="@dimen/_10sdp"
                android:hint="0"
                android:background="@drawable/ic_background_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_minute_first"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:textColor="@color/colorPrimaryFont"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:textSize="@dimen/text_24"
                android:hint="0"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/ic_background_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_minute_second"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/colorPrimaryFont"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:gravity="center"
                android:textSize="@dimen/text_24"
                android:layout_marginEnd="@dimen/_10sdp"
                android:hint="0"
                android:background="@drawable/ic_background_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_second_first"
                android:fontFamily="@font/nunito_bold"
                android:textColor="@color/colorPrimaryFont"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:gravity="center"
                android:textSize="@dimen/text_24"
                android:hint="0"
                android:layout_marginEnd="@dimen/_3sdp"
                android:background="@drawable/ic_background_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/tv_second_second"
                android:fontFamily="@font/nunito_bold"
                android:gravity="center"
                android:textSize="@dimen/text_24"
                android:hint="0"
                android:textColor="@color/colorPrimaryFont"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:background="@drawable/ic_background_timer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView
            android:text="@string/tv_penawaran_anda"
            android:textColor="@color/colorPrimaryFont"
            android:fontFamily="@font/nunito_regular"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioGroup
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_500_ribu"
                android:text="Rp 500.000"
                android:buttonTint="@color/colorGray"
                android:fontFamily="@font/nunito_regular"
                android:textSize="@dimen/text_11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rb_1_jt"
                android:text="Rp 1.000.000"
                android:buttonTint="@color/colorGray"
                android:fontFamily="@font/nunito_regular"
                android:textSize="@dimen/text_11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/rb_2_jt"
                android:text="Rp 2.000.000"
                android:buttonTint="@color/colorGray"
                android:fontFamily="@font/nunito_regular"
                android:textSize="@dimen/text_11"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"/>
        </RadioGroup>
        <LinearLayout
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            tools:ignore="UselessLeaf">
            <ImageView
                android:id="@+id/iv_min"
                android:layout_gravity="center"
                android:src="@drawable/ic_minus_circle"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="ContentDescription" />
            <LinearLayout
                android:background="@drawable/design_search"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/tv_input_price_nego"
                    android:background="@drawable/design_search"
                    android:paddingStart="@dimen/_20sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:hint="Rp 0"
                    android:gravity="center"
                    android:maxLength="16"
                    android:textSize="@dimen/text_16"
                    android:fontFamily="@font/nunito_regular"
                    android:textColorHint="@color/colorPrimaryHintFont"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:ignore="Autofill,LabelFor,RelativeOverlap" />
                <ImageView
                    android:id="@+id/iv_clear_price"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:src="@drawable/ic_clear_price"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_plus"
                android:layout_gravity="center"
                android:src="@drawable/ic_plus_circle"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                tools:ignore="ContentDescription" />
        </LinearLayout>
        <Button
            android:id="@+id/btn_nego_dialog"
            android:text="@string/btn_nego"
            android:textAllCaps="false"
            android:textSize="@dimen/text_16"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/btn_design_blue"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_buy_now_dialog"
            android:text="Buy Now Rp 111.000.000"
            android:textAllCaps="false"
            android:textSize="@dimen/text_16"
            android:fontFamily="@font/nunito_bold"
            android:textColor="@color/colorPrimaryWhite"
            android:background="@drawable/btn_design"
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="@string/tv_penawar"
            android:textColor="@color/colorPrimaryFont"
            android:fontFamily="@font/nunito_regular"
            android:textSize="@dimen/text_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_bid"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"/>
    </LinearLayout>
</RelativeLayout>