<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryWhite"
    android:id="@+id/swipe_refresh_cart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sip.grosirmobil.fragment.navigationmenu.WinFragment">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/linear_win_not_empty"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">
                <LinearLayout
                    android:paddingTop="@dimen/_20sdp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:paddingLeft="@dimen/_10sdp"
                        android:paddingRight="@dimen/_10sdp"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="@dimen/text_34"
                        android:text="@string/tv_menang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="RelativeOverlap" />
                    <LinearLayout
                        android:id="@+id/linear_cart"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_cart"
                            android:paddingLeft="@dimen/_5sdp"
                            android:paddingRight="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:textColor="@color/colorPrimaryFont"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:textSize="@dimen/text_16"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/tv_pembayaran"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:ignore="RelativeOverlap" />
                        <LinearLayout
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            tools:ignore="UselessLeaf">
                            <TextView
                                android:textColor="@color/colorPrimaryHintFont"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|start"
                                android:text="@string/tv_harga_kendaraan"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_harga_kendaraan"
                                android:textColor="@color/colorPrimaryFont"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|end"
                                android:textColorHint="@color/colorPrimaryFont"
                                android:hint="Rp 0"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            tools:ignore="UselessLeaf">
                            <TextView
                                android:textColor="@color/colorPrimaryHintFont"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|start"
                                android:text="@string/tv_biaya_admin"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_biaya_admin"
                                android:textColor="@color/colorPrimaryFont"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|end"
                                android:textColorHint="@color/colorPrimaryFont"
                                android:text="Rp 500.000"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:paddingLeft="@dimen/_15sdp"
                            android:paddingRight="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_35sdp"
                            tools:ignore="UselessLeaf">
                            <TextView
                                android:textColor="@color/colorPrimaryHintFont"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|start"
                                android:text="@string/tv_total"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                            <TextView
                                android:id="@+id/tv_total"
                                android:textColor="@color/colorPrimaryFont"
                                android:textSize="@dimen/text_16"
                                android:fontFamily="@font/nunito_regular"
                                android:gravity="center|end"
                                android:textColorHint="@color/colorPrimaryFont"
                                android:hint="Rp 0"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <Button
                android:id="@+id/btn_pay"
                android:fontFamily="@font/nunito_bold"
                android:textSize="@dimen/text_18"
                android:text="@string/btn_bayar"
                android:visibility="gone"
                android:textColor="@color/colorPrimaryWhite"
                android:textAllCaps="false"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/btn_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linear_win_empty"
            android:visibility="visible"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/_20sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:textColor="@color/colorPrimaryFont"
                android:fontFamily="@font/nunito_bold"
                android:textSize="@dimen/text_34"
                android:text="@string/tv_menang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap" />
            <TextView
                android:gravity="center"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/tv_win_empty_data"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_20"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_win_empty_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
            <TextView
                android:id="@+id/tv_ket_empty_data_notification"
                android:alpha="0.6"
                android:gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/tv_empty_win"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btn_telusuri_kenderaan"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:fontFamily="@font/nunito_semi_bold"
                android:textSize="@dimen/text_18"
                android:textColor="@color/colorPrimaryWhite"
                android:textAllCaps="false"
                android:text="@string/btn_telusuri_kenderaan"
                android:background="@drawable/btn_design"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>