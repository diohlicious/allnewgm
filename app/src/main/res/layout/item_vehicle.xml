<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vehicle"
    android:background="@color/colorPrimaryWhite"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">
        <ImageView
            android:id="@+id/iv_image"
            android:scaleType="fitXY"
            android:src="@drawable/image_car_ex"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_90sdp"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_vehicle_name"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimaryFont"
                android:text="Masserati DSE AT 2015"
                android:maxLines="2"
                android:textSize="@dimen/text_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_plat_number"
                android:layout_marginTop="@dimen/_4sdp"
                android:layout_marginBottom="@dimen/_2sdp"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimaryHintFont"
                android:text="NI 21231324"
                android:textSize="@dimen/text_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_city"
                android:fontFamily="@font/nunito_regular"
                android:textColor="@color/colorPrimaryHintFont"
                android:text="Jakarta"
                android:textSize="@dimen/text_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_price"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/colorPrimaryFont"
                    android:text="Rp 111.000.000"
                    android:textSize="@dimen/text_14"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:id="@+id/linear_description"
                    android:background="@drawable/design_card_expired_date"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_7sdp"
                    android:paddingRight="@dimen/_7sdp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp">
                    <ImageView
                        android:id="@+id/iv_timer"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/ic_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/tv_description"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_11"
                        android:fontFamily="@font/nunito_regular"
                        android:text="04h 27m 03s"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>