<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vehicle"
    android:background="@color/colorPrimaryWhite"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/_105sdp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_car_ex2"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:id="@+id/linear_cart"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_vehicle_name"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColor="@color/colorPrimaryFont"
                android:maxLines="2"
                android:textSize="@dimen/text_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="DisableBaselineAlignment">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tv_plat_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/colorPrimaryHintFont"
                            android:textSize="@dimen/text_11" />
                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/colorPrimaryTheme"
                            android:textSize="@dimen/text_11" />
                    </LinearLayout>
                    <TextView
                        android:textSize="@dimen/text_12"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/tv_dimenangkan_seharga"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_price"
                        android:textSize="@dimen/text_14"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <CheckBox
                    android:id="@+id/cb_cart"
                    android:gravity="top"
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>