<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vehicle"
    android:background="@color/colorPrimaryWhite"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/image_car_ex2"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_vehicle_name"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColor="@color/colorPrimaryFont"
                android:maxLines="2"
                android:textSize="@dimen/text_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_plat_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_1sdp"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/colorPrimaryHintFont"
                    android:textSize="@dimen/text_11" />
                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:textColor="@color/colorPrimaryTheme"
                    android:textSize="@dimen/text_11" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/tv_dimenangkan_seharga"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_10" />

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/tv_admin_fee"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_10" />

                    <TextView
                        android:id="@+id/admin_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_12" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/tv_total_pembayaran"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_10" />

                    <TextView
                        android:id="@+id/total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_marginEnd="@dimen/_8sdp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circle_image_view_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/ic_circle_theme" />

                    <TextView
                        android:id="@+id/tv_initial_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:fontFamily="@font/nunito_semi_bold"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_24" />
                </RelativeLayout>
            </LinearLayout>
            <Button
                android:id="@+id/btn_next_payment"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_28sdp"
                android:background="@drawable/btn_design_radius_5"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/btn_pay"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="@dimen/text_12" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>