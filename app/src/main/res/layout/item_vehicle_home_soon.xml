<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vehicle"
    android:background="@color/colorPrimaryWhite"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">
        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/image_car_ex2"
            tools:ignore="ContentDescription" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <TextView
                    android:id="@+id/tv_vehicle_name"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:textColor="@color/colorPrimaryFont"
                    android:text="Masserati DSE AT 2015"
                    android:maxLines="2"
                    android:textSize="@dimen/text_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_plat_number"
                        android:text="NI 21231324 - "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/colorPrimaryHintFont"
                        android:textSize="@dimen/text_11" />
                    <TextView
                        android:id="@+id/tv_city"
                        android:text="Jakarta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/colorPrimaryTheme"
                        android:textSize="@dimen/text_11" />
                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="DisableBaselineAlignment">
                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="@dimen/text_12"
                            android:textColor="@color/colorPrimaryFont"
                            android:fontFamily="@font/nunito_regular"
                            android:text="@string/tv_open_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_open_price"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/colorPrimaryFont"
                            android:fontFamily="@font/nunito_bold"
                            android:text="Rp 111.000.000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textSize="@dimen/text_12"
                            android:textColor="@color/colorPrimaryFont"
                            android:fontFamily="@font/nunito_regular"
                            android:text="@string/tv_harga_sekarang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_bottom_price"
                            android:textSize="@dimen/text_14"
                            android:textColor="@color/colorPrimaryFont"
                            android:fontFamily="@font/nunito_bold"
                            android:text="Rp 120.000.000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="0.7"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp">
                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/circle_image_view_item"
                                android:background="@drawable/ic_circle_soon"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"/>
                            <TextView
                                android:id="@+id/tv_initial_name"
                                android:text="B"
                                android:gravity="center"
                                android:textColor="@color/colorPrimaryFont"
                                android:textSize="@dimen/text_24"
                                android:fontFamily="@font/nunito_semi_bold"
                                android:layout_centerInParent="true"
                                android:layout_width="@dimen/_35sdp"
                                android:layout_height="@dimen/_35sdp"/>
                        </RelativeLayout>
                        <LinearLayout
                            android:id="@+id/linear_description"
                            android:background="@drawable/design_card_expired_date"
                            android:orientation="horizontal"
                            android:paddingLeft="@dimen/_7sdp"
                            android:paddingRight="@dimen/_7sdp"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_20sdp">
                            <TextView
                                android:id="@+id/tv_timer"
                                android:drawableStart="@drawable/ic_timer"
                                android:textColor="@color/colorPrimaryFont"
                                android:textSize="@dimen/text_11"
                                android:drawablePadding="@dimen/_5sdp"
                                android:fontFamily="@font/nunito_regular"
                                android:text="04h 27m 03s"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:src="@drawable/ic_favorite_empty"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>