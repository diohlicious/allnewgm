<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipe_refresh_home"
    android:background="@color/colorPrimaryWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sip.grosirmobil.fragment.navigationmenu.HomeFragment">
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:paddingLeft="@dimen/_25sdp"
                android:paddingRight="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessParent">
                <TextView
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="@dimen/text_34"
                    android:text="@string/tv_home"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    tools:ignore="RelativeOverlap" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:src="@drawable/ic_syahrul"
                    android:layout_alignParentEnd="true"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/linear_search_and_live"
                android:layout_marginTop="@dimen/_30sdp"
                android:paddingLeft="@dimen/_25sdp"
                android:paddingRight="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_search"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:background="@drawable/design_search"
                    android:textColor="#999999"
                    android:textSize="@dimen/text_14"
                    android:gravity="center|left"
                    android:text="@string/tv_kendaraan_yang_sedang_anda_cari"
                    android:fontFamily="@font/nunito_regular"
                    android:drawableStart="@drawable/ic_search"
                    android:drawablePadding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    tools:ignore="RtlHardcoded" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:background="@drawable/design_card"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_50sdp"
                    tools:ignore="UselessLeaf">
                    <TextView
                        android:id="@+id/tv_kendaraan_tayang"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_16"
                        android:fontFamily="@font/nunito_bold"
                        android:text="Ada 32 kendaraan tayang!"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tv_see_all"
                        android:layout_marginEnd="@dimen/_12sdp"
                        android:paddingLeft="@dimen/_7sdp"
                        android:paddingRight="@dimen/_7sdp"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_12"
                        android:fontFamily="@font/nunito_bold"
                        android:background="@drawable/design_card_theme"
                        android:text="@string/tv_lihat_semua"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="@dimen/_25sdp"
                android:background="#FAFAFB"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    tools:ignore="UselessLeaf">
                    <TextView
                        android:id="@+id/tv_live"
                        android:gravity="center"
                        android:textSize="@dimen/text_14"
                        android:text="@string/tv_live"
                        android:textColor="@color/colorPrimaryWhite"
                        android:background="@drawable/design_line_selected_live"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_live_soon"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textSize="@dimen/text_14"
                        android:text="@string/tv_akan_tayang"
                        android:background="@drawable/design_line"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:id="@+id/tv_record"
                        android:gravity="center"
                        android:textSize="@dimen/text_14"
                        android:text="@string/tv_record"
                        android:background="@drawable/design_line"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <TextView
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:text="@string/tv_baru_masuk"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_bold"
                    android:textSize="@dimen/text_22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_live"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_live_soon"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_record"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>