<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_vehicle_history"
    android:background="@color/colorPrimaryWhite"
    app:cardCornerRadius="@dimen/_10sdp"
    android:layout_margin="@dimen/_5sdp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessLeaf">

        <LinearLayout
            android:layout_width="3dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_vehicle_name_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:maxLines="1"
                    android:text="Masserati DSE AT 2015"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_16" />
                <TextView
                    android:id="@+id/tv_license_plate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:maxLines="1"
                    android:text="Masserati DSE AT 2015"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_10" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_event_date_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Event 12 Nov 2020 - "
                        android:textColor="@color/colorPrimaryHintFont"
                        android:textSize="@dimen/text_11" />

                    <TextView
                        android:id="@+id/tv_city_history"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="Jakarta"
                        android:textColor="@color/colorPrimaryTheme"
                        android:textSize="@dimen/text_12" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/tv_harga_awal"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_12" />

                <TextView
                    android:id="@+id/tv_open_price_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Rp 111.000.000"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_14" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginEnd="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_gravity="end"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_image_view_item"
                    android:background="@drawable/ic_circle_theme"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:id="@+id/tv_initial_name_history"
                    android:text="B"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textSize="@dimen/text_24"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_status_history"
                    android:textSize="@dimen/text_12"
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/tv_terjual"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/tv_sold_price_history"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_bold"
                    android:text="Rp 111.000.000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>