<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    tools:context=".activity.ChangePasswordActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/relative_toolbar"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp">
            <ImageView
                android:id="@+id/iv_back"
                android:src="@drawable/ic_back_icon_big"
                android:padding="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription,RelativeOverlap" />
        </RelativeLayout>
        <LinearLayout
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_14sdp"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/tv_ubah_password"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_24" />
            <TextView
                android:alpha="0.6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/tv_rubah_password_lama_anda"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_14" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:alpha="0.6"
                android:fontFamily="@font/nunito_semi_bold"
                android:scrollbarSize="@dimen/_12sdp"
                android:text="@string/tv_password_lama"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_12"
                tools:ignore="HardcodedText" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_old_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorPrimaryTheme"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:theme="@style/myTextInputLabelTheme"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/colorPrimaryFont"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:gravity="center|left"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_16"
                    android:text=""
                    tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:alpha="0.6"
                android:fontFamily="@font/nunito_semi_bold"
                android:scrollbarSize="@dimen/_12sdp"
                android:text="@string/tv_password_baru"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_12"
                tools:ignore="HardcodedText" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorPrimaryTheme"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:theme="@style/myTextInputLabelTheme"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/colorPrimaryFont"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:gravity="center|left"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_16"
                    android:text=""
                    tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:alpha="0.6"
                android:fontFamily="@font/nunito_semi_bold"
                android:scrollbarSize="@dimen/_12sdp"
                android:text="@string/tv_confirm_password_baru"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_12"
                tools:ignore="HardcodedText" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorPrimaryTheme"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:theme="@style/myTextInputLabelTheme"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/colorPrimaryFont"
                    android:drawableStart="@drawable/ic_password"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:gravity="center|left"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_16"
                    android:text=""
                    tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_change_password"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/nunito_semi_bold"
        android:textSize="@dimen/text_18"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:textColor="@color/colorPrimaryWhite"
        android:textAllCaps="false"
        android:text="@string/btn_change_password"
        android:background="@drawable/btn_design"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp" />
</RelativeLayout>