<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorPrimaryWhite"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ChangePasswordActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/_25sdp"
        android:paddingRight="@dimen/_25sdp">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="@dimen/_152sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:src="@drawable/ic_logo_grosir_mobil"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:id="@+id/linear_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_logo"
            android:layout_marginTop="98dp"
            android:orientation="vertical"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            tools:ignore="UselessLeaf">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/tv_change_password"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_24"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_8sdp"
                android:alpha="0.6"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/tv_change_your_password"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_14"
                tools:ignore="HardcodedText" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40sdp"
                android:alpha="0.6"
                android:fontFamily="@font/nunito_semi_bold"
                android:scrollbarSize="@dimen/_12sdp"
                android:text="Password Baru"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_12"
                tools:ignore="HardcodedText" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorPrimaryTheme"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:theme="@style/myTextInputLabelTheme">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/colorPrimaryFont"
                    android:drawableStart="@drawable/ic_email"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:gravity="center|left"
                    android:enabled="false"
                    android:inputType="textEmailAddress"
                    android:text="lilodpasha@yahoo.com"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_16"
                    tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:alpha="0.6"
                android:fontFamily="@font/nunito_semi_bold"
                android:scrollbarSize="@dimen/_12sdp"
                android:text="Confirm Password Baru"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_12"
                tools:ignore="HardcodedText" />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tv_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:backgroundTint="@color/colorPrimaryTheme"
                android:fontFamily="@font/nunito_semi_bold"
                android:textColorHint="@color/colorPrimaryHintFont"
                android:theme="@style/myTextInputLabelTheme"
                app:passwordToggleEnabled="true">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:backgroundTint="@color/colorPrimaryFont"
                    android:drawableStart="@drawable/ic_email_user"
                    android:drawablePadding="@dimen/_10sdp"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:gravity="center|left"
                    android:inputType="textPassword"
                    android:textColor="@color/colorPrimaryFont"
                    android:textSize="@dimen/text_16"
                    android:text="123456789012"
                    tools:ignore="Autofill,HardcodedText,LabelFor,RtlHardcoded,RtlSymmetry" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/_200sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="bottom">
            <Button
                android:id="@+id/btn_change_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                android:layout_marginRight="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_250sdp"
                android:background="@drawable/btn_design"
                android:fontFamily="@font/nunito_semi_bold"
                android:text="@string/btn_change_password"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryWhite"
                android:textSize="@dimen/text_18" />
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>