<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    tools:context=".activity.CodeOtpFragment">
    <LinearLayout
        android:paddingLeft="@dimen/_25sdp"
        android:paddingRight="@dimen/_25sdp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_logo"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:src="@drawable/ic_logo_grosir_mobil"
            android:layout_width="@dimen/_152sdp"
            android:layout_height="@dimen/_30sdp"
            tools:ignore="ContentDescription" />
        <LinearLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">
            <TextView
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_24"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_bold"
                android:text="@string/tv_kode_otp_terkirim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <TextView
                android:alpha="0.6"
                android:layout_marginTop="@dimen/_8sdp"
                android:textColor="@color/colorPrimaryFont"
                android:textSize="@dimen/text_14"
                android:layout_gravity="center"
                android:fontFamily="@font/nunito_regular"
                android:text="@string/tv_cek_email_atau_sms_dan_masuki_otp_anda_untuk_memverifikasi_akun"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                tools:ignore="HardcodedText" />
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp">
                <EditText
                    android:id="@+id/et_new_otp_1"
                    android:backgroundTint="@color/colorPrimaryTheme"
                    android:layout_width="@dimen/_35sdp"
                    android:textSize="@dimen/text_25"
                    android:gravity="center"
                    android:maxLength="1"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />
                <EditText
                    android:id="@+id/et_new_otp_2"
                    android:backgroundTint="@color/colorPrimaryTheme"
                    android:layout_width="@dimen/_35sdp"
                    android:textSize="@dimen/text_25"
                    android:gravity="center"
                    android:maxLength="1"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />
                <EditText
                    android:id="@+id/et_new_otp_3"
                    android:backgroundTint="@color/colorPrimaryTheme"
                    android:layout_width="@dimen/_35sdp"
                    android:textSize="@dimen/text_25"
                    android:gravity="center"
                    android:maxLength="1"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />
                <EditText
                    android:id="@+id/et_new_otp_4"
                    android:backgroundTint="@color/colorPrimaryTheme"
                    android:layout_width="@dimen/_35sdp"
                    android:textSize="@dimen/text_25"
                    android:gravity="center"
                    android:maxLength="1"
                    android:enabled="false"
                    android:textColor="@color/colorPrimaryFont"
                    android:fontFamily="@font/nunito_bold"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    tools:ignore="LabelFor" />
            </LinearLayout>
            <RelativeLayout
                android:layout_marginBottom="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btn_verified_password"
                    android:fontFamily="@font/nunito_semi_bold"
                    android:textSize="@dimen/text_18"
                    android:layout_marginLeft="@dimen/_16sdp"
                    android:layout_marginRight="@dimen/_16sdp"
                    android:textColor="@color/colorPrimaryWhite"
                    android:textAllCaps="false"
                    android:text="@string/btn_verifikasi"
                    android:background="@drawable/btn_design"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_keyboard"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <Button
                android:id="@+id/btn_1"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_2"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="2"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_3"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="3"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <Button
                android:id="@+id/btn_4"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="4"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_5"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="5"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_6"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="6"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <Button
                android:id="@+id/btn_7"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="7"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_8"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="8"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_9"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="9"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp">
            <ImageButton
                android:id="@+id/btn_back_press"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:src="@drawable/ic_back_press"
                android:text="1"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_0"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="0"
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
            <Button
                android:id="@+id/btn_dot"
                android:background="@drawable/btn_press_pin"
                android:fontFamily="@font/nunito_regular"
                android:text="."
                android:gravity="center"
                android:textSize="@dimen/_25sdp"
                android:textColor="@color/colorPrimaryFont"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:ignore="ButtonStyle" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>