<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/swipe_refresh"
    android:background="@color/colorPrimaryWhite"
    tools:context=".activity.VehicleDetailActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relative_toolbar"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/iv_back"
                android:src="@drawable/ic_back"
                android:visibility="visible"
                android:padding="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription,RelativeOverlap" />
            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_marginEnd="@dimen/_10sdp"
                android:src="@drawable/ic_favorite_empty"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/_10sdp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="ContentDescription" />
        </RelativeLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_below="@id/relative_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UselessLeaf">
                <LinearLayout
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_title_vehicle"
                        android:textColor="@color/colorPrimaryFont"
                        android:fontFamily="@font/nunito_bold"
                        android:textSize="@dimen/text_24"
                        android:maxLines="2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"/>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_gravity="end"
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp">
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/circle_image_view_item"
                            android:background="@drawable/ic_circle_red"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>
                        <TextView
                            android:id="@+id/tv_initial_name"
                            android:textColor="@color/colorPrimaryWhite"
                            android:textSize="@dimen/text_24"
                            android:fontFamily="@font/nunito_semi_bold"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_plat_number"
                        android:layout_width="197dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_2sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="B1433NYM - "
                        android:textColor="@color/colorPrimaryHintFont"
                        android:textSize="@dimen/text_16" />
                    <TextView
                        android:id="@+id/tv_city"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/colorRed"
                        android:text="Jakarta"
                        android:textSize="@dimen/text_16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <TextView
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/colorPrimaryFont"
                            android:text="@string/tv_harga_awal"
                            android:textSize="@dimen/text_11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_harga_awal"
                            android:fontFamily="@font/nunito_bold"
                            android:textColor="@color/colorPrimaryFont"
                            android:textSize="@dimen/text_18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/nunito_regular"
                            android:textColor="@color/colorPrimaryFont"
                            android:text="@string/tv_harga_sekarang"
                            android:textSize="@dimen/text_11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tv_harga_sekarang"
                            android:fontFamily="@font/nunito_bold"
                            android:textColor="@color/colorPrimaryFont"
                            android:textSize="@dimen/text_18"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linear_description"
                    android:background="@drawable/design_card_expired_date_live"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_20sdp">
                    <ImageView
                        android:id="@+id/iv_timer"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/ic_timer_white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/tv_timer"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_11"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image_car"
                    android:visibility="visible"
                    android:nestedScrollingEnabled="false"
                    android:paddingStart="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="RtlSymmetry" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_20sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/tv_deskripsi_kendaraan"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_16" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_16" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:nestedScrollingEnabled="false"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_car_data"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/design_line_rectangle"
                        android:drawableEnd="@drawable/ic_chevron_down"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="@string/tv_data_mobil"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_14"
                        tools:ignore="RtlHardcoded" />
                    <!--                <androidx.recyclerview.widget.RecyclerView-->
                    <!--                    android:id="@+id/rv_car_data"-->
                    <!--                    android:visibility="gone"-->
                    <!--                    android:background="@drawable/design_line_rectangle"-->
                    <!--                    android:layout_width="match_parent"-->
                    <!--                    android:layout_height="wrap_content"/>-->
                    <include layout="@layout/include_vehicle_detail_car_data" />

                    <TextView
                        android:id="@+id/tv_body"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/design_line_rectangle"
                        android:drawableEnd="@drawable/ic_chevron_down"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="@string/tv_body"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_14"
                        tools:ignore="RtlHardcoded" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_body"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/design_line_rectangle"
                        android:visibility="gone" />
                    <!--                <include layout="@layout/include_vehicle_detail_body"/>-->
                    <TextView
                        android:id="@+id/tv_interior"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/design_line_rectangle"
                        android:drawableEnd="@drawable/ic_chevron_down"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="@string/tv_interior"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_14"
                        tools:ignore="RtlHardcoded" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_interior"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/design_line_rectangle"
                        android:visibility="gone" />
                    <!--                <include layout="@layout/include_vehicle_detail_interior"/>-->
                    <TextView
                        android:id="@+id/tv_engine"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/design_line_rectangle"
                        android:drawableEnd="@drawable/ic_chevron_down"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="@string/tv_engine"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_14"
                        tools:ignore="RtlHardcoded" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_engine"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/design_line_rectangle"
                        android:visibility="gone" />
                    <!--                <include layout="@layout/include_vehicle_detail_engine"/>-->
                    <TextView
                        android:id="@+id/tv_other"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/design_line_rectangle"
                        android:drawableEnd="@drawable/ic_chevron_down"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="@string/tv_other"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_14"
                        tools:ignore="RtlHardcoded" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/design_line_rectangle"
                        android:visibility="gone" />
                    <!--                <include layout="@layout/include_vehicle_detail_other"/>-->
                    <TextView
                        android:id="@+id/tv_broken_image"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/design_line_rectangle"
                        android:drawableEnd="@drawable/ic_chevron_down"
                        android:fontFamily="@font/nunito_regular"
                        android:gravity="center|left"
                        android:paddingLeft="@dimen/_15sdp"
                        android:paddingRight="@dimen/_15sdp"
                        android:text="@string/tv_broken_image"
                        android:textColor="@color/colorPrimaryFont"
                        android:textSize="@dimen/text_14"
                        tools:ignore="RtlHardcoded" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_broken_image"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/design_line_rectangle"
                        android:visibility="gone" />
                    <!--                <include layout="@layout/include_vehicle_detail_broken_image"/>-->
                    <Button
                        android:id="@+id/btn_nego"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/btn_design"
                        android:fontFamily="@font/nunito_bold"
                        android:text="@string/btn_nego"
                        android:textAllCaps="false"
                        android:textColor="@color/colorPrimaryWhite"
                        android:textSize="@dimen/text_16"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/linear_penawaran"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_100sdp"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/_50sdp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/nunito_regular"
                            android:text="@string/tv_riwayat_penawaran"
                            android:textColor="@color/colorPrimaryFont"
                            android:textSize="@dimen/text_16" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_bid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
        <include layout="@layout/include_vehicle_detail_dialog"/>
        <include layout="@layout/include_vehicle_detail_confirm_nego_dialog"/>
        <include layout="@layout/include_vehicle_detail_confirm_buy_now_dialog"/>
        <include layout="@layout/include_vehicle_detail_success_nego_dialog"/>
        <include layout="@layout/include_vehicle_detail_success_buy_now_dialog"/>
    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>